<?xml version="1.0" encoding="UTF-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/tabs_selected">
    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_update_pressed_color"/>
                    <stroke
                        android:width="0.8dp"
                        android:color="@color/btn_update_pressed_color"/>
                    <corners android:radius="15dip"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_update_pressed_color"/>
                    <stroke
                        android:width="0.8dp"
                        android:color="@color/btn_update_pressed_color"/>
                    <corners android:radius="15dip"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_update_pressed_color"/>
                    <stroke
                        android:width="0.8dp"
                        android:color="@color/btn_update_pressed_color"/>
                    <corners android:radius="15dip"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_update_default_color"/>
                    <stroke
                        android:width="0.8dp"
                        android:color="@color/btn_update_default_color"/>
                    <corners android:radius="15dip"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>