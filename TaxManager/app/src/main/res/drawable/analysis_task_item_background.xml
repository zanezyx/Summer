<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/tabs_selected">
    <item>
        <selector>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/fragment_around_background" />

                    <stroke
                        android:width="0.8dp"
                        android:color="@color/fragment_around_background" />
                    <corners android:radius="15dip" />
                    <padding
                        android:bottom="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_FFFFFF" />

                    <stroke
                        android:width="0.8dp"
                        android:color="@color/color_FFFFFF" />
                    <corners android:radius="15dip" />
                    <padding
                        android:bottom="10dp"
                        android:top="10dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_FFFFFF" />

                    <stroke
                        android:width="0.8dp"
                        android:color="@color/color_FFFFFF" />
                    <corners android:radius="15dip" />
                    <padding
                        android:bottom="10dp"
                        android:top="10dp" />
                </shape>
            </item>

        </selector>
    </item>
</ripple>





