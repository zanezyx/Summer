<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.deter.TaxManager.FirmwareUpdateActivity">

    <include
        layout="@layout/tabs_layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/fragment_around_background"
        android:orientation="vertical"
        android:padding="@dimen/around_item_margin">

        <LinearLayout
            android:id="@+id/check_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/check_version_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/check_version_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/around_item_margin"
                android:text="@string/settings_firmware_upgrade_checking_info"
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/update_opt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripperbackground"
            android:padding="@dimen/around_item_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/checked_version_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/around_item_margin"
                android:gravity="center_horizontal"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <TextView
                android:id="@+id/btn_update_last"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checked_version_info"
                android:layout_margin="@dimen/around_item_margin"
                android:background="@drawable/preference_background"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:text="@string/settings_online_upgrade_update_now"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/update_opt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/ripperbackground"
            android:orientation="vertical"
            android:paddingTop="@dimen/around_item_margin"
            android:paddingBottom="@dimen/around_item_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_firmware_upgrade_specail_version"
                android:textColor="@color/tabs_selected"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/around_item_margin">

                <EditText
                    android:id="@+id/version_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/btn_update_special"
                    android:hint="@string/settings_firmware_upgrade_input_hint"
                    android:digits="@string/register_name_digits"/>

                <TextView
                    android:id="@+id/btn_update_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/preference_background"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:text="@string/settings_online_upgrade_update_now"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
