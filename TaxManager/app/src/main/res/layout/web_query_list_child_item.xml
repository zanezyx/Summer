<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/access_url_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/access_hour_tv"
        android:padding="@dimen/web_query_list_child_item_padding"
        android:singleLine="true" />

    <TextView
        android:id="@+id/access_hour_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/web_query_list_child_item_padding"
        android:textSize="@dimen/web_query_list_child_date_tv" />

</RelativeLayout>