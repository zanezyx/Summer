    <TextView
        android:id="@+id/prompt_contents_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dialog_reminder_content_min_height"
        android:paddingLeft="@dimen/dialog_reminder_content_magin"
        android:paddingRight="@dimen/dialog_reminder_content_magin"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_line_height_3px"
        android:background="@color/color_E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dialog_remind_buttom_layout_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_reminder_cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@drawable/dialog_reminder_message_cacel_btn_bg"
            android:text="@string/dialog_reminder_cacel_str"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/split_line_view"
            android:layout_width="@dimen/base_line_height_3px"
            android:layout_height="fill_parent"
            android:background="@color/color_E6E6E6" />

        <Button
            android:id="@+id/btn_reminder_comfirm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="@drawable/dialog_reminder_message_confirm_btn_bg"
            android:text="@string/dialog_reminder_comfirm_str"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>