<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_around_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_collision_analys" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/empty_analys_str_margin"
        android:text="@string/empty_analys_str"
        android:textSize="@dimen/empty_analys_str_size" />

    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_accompany_analys_str"
        android:textSize="@dimen/empty_analys_str_size" />

</LinearLayout>