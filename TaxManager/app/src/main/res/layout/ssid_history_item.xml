<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/listview_common_top_bottom_margin"
        android:layout_marginLeft="@dimen/listview_common_right_left_margin"
        android:layout_marginRight="@dimen/listview_common_right_left_margin"
        android:layout_marginTop="@dimen/listview_common_top_bottom_margin"
        android:background="@drawable/ripperbackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/has_pwd_lock_iv"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ssid_history_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <TextView
                android:id="@+id/ssid_history_item_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

        </LinearLayout>


        <ImageView
            android:id="@+id/has_pwd_lock_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/listview_common_right_left_margin"
            android:src="@drawable/has_pwd_lock"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>