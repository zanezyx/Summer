<resources>
    <attr name="triangleR" format="float" />
    <attr name="pointR" format="float" />
    <attr name="scaleTimes" format="integer" />
    <declare-styleable name="StarView">
        <attr name="triangleR" />
        <attr name="pointR" />
        <attr name="scaleTimes" />
    </declare-styleable>

    <declare-styleable name="AroundButton">
        <attr name="aroundicon" format="integer" />
        <attr name="arounditle" format="integer" />
        <attr name="aroundheight" format="dimension" />
    </declare-styleable>


    <declare-styleable name="EditText">
        <!-- 总共输入长度 -->
        <attr name="totalLength" format="integer" />
        <!-- 每组的长度 -->
        <attr name="eachLength" format="integer" />
        <!-- 分隔符 -->
        <attr name="delimiter" format="string" />
        <!-- 占位符 -->
        <attr name="placeHolder" format="string" />
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="lineColor" format="color|reference"/>
        <attr name="selectedTextColor" format="color|reference"/>
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

</resources>
